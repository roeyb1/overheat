{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "jai ${workspaceFolder}/build.jai - -natvis",
            "problemMatcher": [
                {
                    "severity": "error",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*):(\\d+),(\\d+).*Error: (.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "message": 4
                        }
                    ],
                    "owner": "jai"
                },
                {
                    "severity": "warning",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*):(\\d+),(\\d+).*Warning: (.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "message": 4
                        }
                    ],
                    "owner": "jai"
                },
                {
                    "severity": "info",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*):(\\d+),(\\d+).*Info: (.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "message": 4
                        }
                    ],
                    "owner": "jai"
                },
                {
                    "severity": "info",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*)\\((.*):(\\d+)\\)$",
                            "file": 2,
                            "line": 3,
                            "message": 1,
                        }
                    ],
                    "owner": "jai"
                },
            ]
        },
        {
            "label": "build (Profiling)",
            "type": "shell",
            "command": "jai ${workspaceFolder}/build.jai - -profile"
        }
    ]
}