{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (Server)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "sapped.exe",
            "args": [
                "-server"
            ],
            "console":"integratedTerminal",
            "logging": {
                "moduleLoad": true,
                "trace": true
            },
            "visualizerFile": "${workspaceFolder}/.vscode/jai.natvis",
            "cwd": "${workspaceRoot}/bin",
            "preLaunchTask": "build"
        },
        {
            "name": "Launch (Client)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "sapped.exe",
            "args": [
                "-client"
            ],
            "console":"integratedTerminal",
            "logging": {
                "moduleLoad": true,
                "trace": true
            },
            "visualizerFile": "${workspaceFolder}/.vscode/jai.natvis",
            "cwd": "${workspaceRoot}/bin",
            "preLaunchTask": "build"
        }
    ]
}